<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="1dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:text="一个垂直方向的DrawerLayout,抽屉从上向下展开"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/font_blue_deep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/abstract_"
        android:text="一个垂直方向的DrawerLayout,抽屉从上向下垂直方向的DrawerLayout,抽屉从上向下垂直方向的DrawerLayout,抽屉从上向下垂直方向的DrawerLayout,抽屉从上向下抽屉从上向下,抽屉从上向下抽屉从上向下"
        android:maxLines="2"
        android:padding="8dp"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/font_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="7dp"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/author"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:drawablePadding="2dp"
            android:text="xiaolong"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cdate"
            android:drawableLeft="@drawable/ic_alarm_black_24dp"
            android:drawablePadding="2dp"
            android:text="2016-5-17"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="256dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>